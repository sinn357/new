generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Work {
  id          String    @id @default(cuid())
  title       String
  content     String
  techStack   String[]
  githubUrl   String?
  demoUrl     String?
  imageUrl    String?
  status      String    @default("completed") // "completed", "in-progress", "planned"
  duration    String?
  createdAt   DateTime  @default(now())
}

model Archive {
  id        String    @id @default(cuid())
  title     String
  content   String
  category  String    // "writing", "essay", "review:movie", "review:book", "review:music", "travel", etc.
  tags      String[]  // Optional tags for additional filtering
  createdAt DateTime  @default(now())
}