generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Work {
  id           String    @id @default(cuid())
  title        String
  content      String
  category     String    @default("product") // "product", "media", "photography"
  techStack    String[]
  githubUrl    String?
  demoUrl      String?
  youtubeUrl   String?
  instagramUrl String?
  imageUrl     String?
  fileUrl      String?
  status       String    @default("completed") // "completed", "in-progress", "planned"
  duration     String?
  createdAt    DateTime  @default(now())
}

model Archive {
  id        String    @id @default(cuid())
  title     String
  content   String
  category  String    // "writing", "essay", "review:movie", "review:book", "review:music", "travel", etc.
  tags      String[]  // Optional tags for additional filtering
  imageUrl  String?   // Optional image for the post
  fileUrl   String?   // Optional file attachment
  createdAt DateTime  @default(now())
}

model PageContent {
  id        String    @id @default(cuid())
  page      String    @unique // "home", "about", "work", "archive"
  title     String
  subtitle  String?   // Optional subtitle
  content   String    // Main content/description
  sections  Json?     // Additional sections data (skills, interests, contact info, etc.)
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
}